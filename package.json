{
  "name": "@bykea/queue-adaptor",
  "version": "1.0.0",
  "description": "Queue Adaptor for communication with different Queues(Kafka/SQS)",
  "main": "index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "http://artifactory.devcrud.uk/fahad.azhar/queue-adaptor.git"
  },
  "keywords": [
    "queue",
    "sqs",
    "kafka"
  ],
  "author": "fahad.azhar",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "kafkajs": "^1.15.0"
  }
}
